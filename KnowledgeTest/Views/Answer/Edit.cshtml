                @Html.DropDownList("QuestionId", String.Empty)
                @Html.ValidationMessageFor(model => model.QuestionId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
